{% extends 'base.html.twig' %}

{% block title %}Hello PointController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<body>
<form action='/location/new' method='POST' class='px-4'>
    <div class="mb-3">
        <label class='form-label text-success'>Nom du point: </label>
        <input type='text' class="form-control" name='name'>
        <label class='form-label text-success'>Nombre d'habitants: </label>
        <input type='text' class="form-control" name='nbHabitants'>
        <label class='form-label text-success'>Nombre de symptomatiques: </label>
        <input type='text' class="form-control" name='nbsymptomatiques'>
        <label class='form-label text-success'>Nombre de cas positifs: </label>
        <input type='text' class="form-control" name='nbPositifs'>
    </div>

    <div class="mb-3">
        <select class="form-select form-select-lg" name="zone_id" required>
            <option value="" selected disabled>Choisissez une zone</option>
            {% for zone in zones %}
                <option value="{{ zone.id }}">{{ zone.nomZone }}</option>
            {% else %}
                <option disabled>Aucune zone disponible</option>
            {% endfor %}
        </select>
    </div>

    <div class="mb-3">
        <input type='submit' class='btn btn-success' value='Ajouter la localisation'>
        <input type='reset' class='btn btn-danger ms-2' value='Annuler'>
    </div>
</form>
</body>
{% endblock %}
