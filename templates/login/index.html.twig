{% extends 'baselogin.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
	<div class="limiter">
	
		<div class="container-login100" >
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="{{asset('login/images/avatar.png')}}" alt="IMG">
				</div>

				<form class="login100-form validate-form" action='{{ path('app_login') }}' method='POST'>
					<span class="login100-form-title">
						Member
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Balise email requise">
						<input class="input100" type="text" name="_username" placeholder="email"/>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "Balise mot de passe requise">
						<input class="input100" type="text" name="_password" placeholder="mot de passe"/>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-users" aria-hidden="true"></i>
						</span>
					</div>
				
					
					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
				
					Se connecter
						</button>
					</div>

					
					<div class="text-center p-t-136">
						<a class="txt2" href="/">
							Se connecter
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
